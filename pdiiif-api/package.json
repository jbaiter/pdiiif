{
  "name": "pdiiif-server",
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "watch": "tsc --watch",
    "start": "nodemon dist/server.js",
    "dev": "run-p watch start",
    "format": "prettier -w ./src",
    "lint": "eslint . --ext .ts && tsc --noemit",
    "pretest": "tsc --noemit",
    "posttest": "eslint . --ext .ts",
    "prepack": "rm -rf dist && tsc -b && cd ../pdiiif-web && pnpm i && pnpm run build &&  cp -R dist ../pdiiif-api/dist/public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbaiter/pdiiif.git"
  },
  "keywords": [
    "iiif",
    "pdf"
  ],
  "author": "Johannes Baiter <johannes.baiter@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jbaiter/pdiiif/issues"
  },
  "homepage": "https://github.com/jbaiter/pdiiif#readme",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/accept-language-parser": "^1.5.3",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/handlebars-helpers": "^0.5.3",
    "@types/jsbn": "^1.2.30",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^16.18.12",
    "@types/node-fetch": "^2.6.2",
    "@types/qrcode-svg": "^1.1.1",
    "@types/sanitize-html": "^2.8.0",
    "@types/wicg-file-system-access": "^2020.9.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@atlas-viewer/iiif-image-api": "^2.1.1",
    "@iiif/parser": "^1.1.2",
    "@iiif/presentation-3": "1.1.3",
    "@iiif/vault": "^0.9.22",
    "@iiif/vault-helpers": "^0.9.11",
    "@sentry/node": "^6.19.7",
    "@sentry/tracing": "^6.19.7",
    "@wesleytodd/openapi": "^0.1.0",
    "accept-language-parser": "^1.5.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "ip-cidr": "^3.1.0",
    "lodash-es": "^4.17.21",
    "mnemonist": "^0.39.5",
    "node-fetch": "^3.3.0",
    "p-queue": "6.6.2",
    "pdiiif": "workspace:^0.1.0",
    "prom-client": "^14.1.1",
    "puppeteer": "^15.5.0",
    "qrcode-svg": "^1.1.0",
    "sanitize-html": "^2.9.0",
    "winston": "^3.8.2"
  },
  "pnpm": {
    "overrides": {
      "@iiif/parser": "1.0.13"
    }
  },
  "overrides": {
    "@iiif/vault@0.9.20": {
      "@iiif/parser": "1.0.13"
    }
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "engineStrict": true,
  "files": [
    "./dist",
    "./assets"
  ],
  "bin": {
    "pdiiif-server": "./dist/server.js"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
