{
  "name": "pdiiif",
  "version": "0.2.5",
  "description": "Generate fully featured PDFs from IIIF manifests",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "vite build",
    "docs": "typedoc --out ../docs src/index.ts",
    "clean": "rm -rf dist",
    "watch": "vite build --watch",
    "format": "prettier -w ./src",
    "lint": "eslint . --ext .ts && tsc --noemit",
    "pretest": "tsc --noemit",
    "posttest": "eslint . --ext .ts",
    "prepack": "rm -rf dist && npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbaiter/pdiiif-lib.git"
  },
  "keywords": [
    "iiif",
    "pdf",
    "ocr",
    "annotations"
  ],
  "author": "Johannes Baiter <johannes.baiter@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jbaiter/pdiiif/issues"
  },
  "homepage": "https://github.com/jbaiter/pdiiif/blob/main/pdiiif-lib/README.md",
  "dependencies": {
    "@atlas-viewer/iiif-image-api": "^2.2.1",
    "@iiif/helpers": "^1.2.19",
    "@iiif/parser": "^2.1.2",
    "@iiif/presentation-2": "1.0.4",
    "@iiif/presentation-3": "2.2.3",
    "@iiif/presentation-3-normalized": "0.9.7",
    "@jsquash/jpeg": "^1.4.0",
    "async-mutex": "^0.4.1",
    "color": "^4.2.3",
    "dedent-js": "^1.0.1",
    "fflate": "^0.8.2",
    "ocr-parser": "^0.2.5",
    "p-queue": "^7.4.1",
    "path-data-polyfill": "^1.0.6",
    "prom-client": "^14.2.0",
    "sax-wasm": "^2.2.4",
    "tslib": "^2.6.3"
  },
  "overrides": {
    "@iiif/parser": {
      "@iiif/presentation-3": "^2.2.0"
    }
  },
  "devDependencies": {
    "@laynezh/vite-plugin-lib-assets": "^0.5.23",
    "@types/color": "^3.0.6",
    "@types/common-tags": "^1.8.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "@types/tmp": "^0.2.6",
    "@types/wicg-file-system-access": "^2020.9.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "commander": "^10.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "globby": "^13.2.2",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "magic-string": "^0.30.10",
    "npm-run-all": "^4.1.5",
    "pdf-lib": "^1.17.1",
    "prettier": "^2.8.8",
    "tmp": "^0.2.3",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.24.8",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-plugin-dts": "4.0.0-beta.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browser": {
    "util": false,
    "events": false,
    "zlib": false,
    "prom-client": false,
    "crypto": false
  },
  "files": [
    "/dist",
    "/src"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/src/__tests__/setupJest.ts"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": "dist",
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
